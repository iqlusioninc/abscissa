[package]
name = "{{name}}"
authors = {{authors}}
version = "{{version}}"
edition = "{{edition}}"
rust-version = "{{rust_version}}"

[dependencies]
abscissa_core = "{{abscissa.version}}"
clap = "4"
serde = { version = "1", features = ["serde_derive"] }
thiserror = "1"

[dev-dependencies]
abscissa_core = { version = "{{abscissa.version}}", features = ["testing"] }
once_cell = "1.2"

{{#if patch_crates_io~}}
[patch.crates-io]
{{patch_crates_io}}
{{/if~}}
